<!-- views/applications.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Applications</title>
</head>
<body>
    <h1>My Applications</h1>
    <p><a href="/">Home</a> | <a href="/logout">Logout</a></p>
    <table border="1">
        <tr>
            <th>ID</th>
            <th>Item</th>
            <th>Quantity</th>
            <th>Purpose</th>
            <th>Status</th>
        </tr>
        <% applications.forEach(function(app) { %>
            <tr>
                <td><%= app.id %></td>
                <td><%= app.item_name %></td>
                <td><%= app.quantity %></td>
                <td><%= app.purpose %></td>
                <td><%= app.status %></td>
            </tr>
        <% }); %>
    </table>
</body>
</html>